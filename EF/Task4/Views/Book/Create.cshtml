@model Task4.Models.Database.Book
@{
    ViewBag.Title = "Create";
}

<h2>Create Book</h2>
<div>
    <div class="row">
        <div class="col-md-2">
            <div class="navbar-header">
                <a class="btn btn-success" href="/Book/Show">Book List</a>
                <a class="btn btn-success" href="/Book/HighPrice">Higher Price</a>
            </div>
        </div>
        <div class="col-md-10">
            <form action="/Book/Create" method="post">
                <input type="text" name="Name" class="form-control" placeholder="name" />
                <input type="text" name="Auth" class="form-control" placeholder="author" />
                <input type="text" name="Price" class="form-control" placeholder="Price" />
                <input type="submit" value="Add" />
            </form>
        </div>
    </div>
</div>


